{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "poe": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Poe",
      "options": {
        "baseURL": "https://api.poe.com/v1",
        "apiKey": "{env:AGENT_API_KEY}"
      },
      "models": {
        "claude-sonnet-4.5": {
          "name": "Claude Sonnet 4.5 (Poe)",
          "options": {
            "extra_body": {
              "thinking_budget": 12288,
              "web_search": true
            }
          }
        },
        "claude-opus-4.5": {
          "name": "Claude Opus 4.5 (Poe)",
          "options": {
            "extra_body": {
              "thinking_budget": 12288,
              "web_search": true
            }
          }
        },
        "gemini-3-pro": {
          "name": "Gemini 3 Pro (Poe)",
          "options": {
            "extra_body": {
              "thinking_level": "high",
              "web_search": true
            }
          }
        },
        "gpt-5.2-codex": {
          "name": "GPT-5.2 Codex (Poe)",
          "options": {
            "extra_body": {
              "reasoning_effort": "high"
            }
          }
        }
      }
    }
  },
  "model": "poe/claude-sonnet-4.5"
}
