{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "poe": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Poe",
      "options": { "baseURL": "https://api.poe.com/v1", "apiKey": "{env:AGENT_API_KEY}" },
      "models": {
        "claude-sonnet-4.5": {
          "name": "Claude Sonnet 4.5 (Poe)",
          "cost": { "input": 3, "output": 15 },
          "options": { "extra_body": { "thinking_budget": 12288, "web_search": true } },
          "variants": { "fast": { "extra_body": { "thinking_budget": 0, "web_search": true } } }
        },
        "claude-opus-4.5": {
          "name": "Claude Opus 4.5 (Poe)",
          "cost": { "input": 5, "output": 25 },
          "options": { "extra_body": { "thinking_budget": 12288, "web_search": true } },
          "variants": { "fast": { "extra_body": { "thinking_budget": 0, "web_search": true } } }
        },
        "gemini-3-pro": {
          "name": "Gemini 3 Pro (Poe)",
          "cost": { "input": 2, "output": 12 },
          "options": { "extra_body": { "thinking_level": "high", "web_search": true } },
          "variants": { "low": { "extra_body": { "thinking_level": "low", "web_search": true } } }
        },
        "gpt-5.2-codex": {
          "name": "GPT-5.2 Codex (Poe)",
          "cost": { "input": 1.75, "output": 14 },
          "options": { "extra_body": { "reasoning_effort": "xhigh" } },
          "variants": {
            "high": { "extra_body": { "reasoning_effort": "high" } },
            "medium": { "extra_body": { "reasoning_effort": "medium" } }
          }
        },
        "glm-4.7": {
          "name": "GLM-4.7 (Poe)",
          "cost": { "input": 0.6, "output": 2.2 },
          "options": { "extra_body": { "enable_thinking": true } },
          "variants": { "fast": { "extra_body": { "enable_thinking": false } } }
        },
        "minimax-m2.1": {
          "name": "MiniMax M2.1 (Poe)",
          "cost": { "input": 0.3, "output": 1.2 },
          "options": { "extra_body": { "enable_thinking": true } },
          "variants": { "fast": { "extra_body": { "enable_thinking": false } } }
        },
        "gpt-oss-120b": {
          "name": "GPT-OSS 120B (Poe)",
          "cost": { "input": 0.35, "output": 0.75 }
        }
      }
    }
  },
  "model": "poe/claude-sonnet-4.5"
}
