{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "poe": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Poe",
      "options": {
        "baseURL": "https://api.poe.com/v1",
        "apiKey": "{env:AGENT_API_KEY}"
      },
      "models": {
        "claude-sonnet-4.5": {
          "name": "Claude Sonnet 4.5 (Poe)",
          "options": {
            "extra_body": {
              "thinking_budget": 12288,
              "web_search": true
            }
          }
        },
        "glm-4.7": {
          "name": "GLM-4.7 (Poe)",
          "options": {
            "extra_body": {
              "enable_thinking": true
            }
          }
        }
      }
    }
  },
  "model": "poe/claude-sonnet-4.5"
}
